<Window x:Class="WekkerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WekkerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label FontSize="14" Name="currentTimerLabel"  Content="CurrentTime" HorizontalAlignment="Left" Height="38" Margin="10,125,0,0" VerticalAlignment="Top" Width="177"/>
        <Button Name="starAlarmButton" Content="Start alarm" HorizontalAlignment="Left" Margin="67,233,0,0" VerticalAlignment="Top" Width="120" Height="31" Click="starAlarmButton_Click"/>
        <Button Name="stopAlarmButton" Content="Stop alarm" HorizontalAlignment="Left" Margin="305,233,0,0" VerticalAlignment="Top" Width="120" Height="31" Click="stopAlarmButton_Click"/>
        <TextBox Name="alarmTijdTextBox" FontSize="14" HorizontalAlignment="Left" Height="32" Margin="305,131,0,0" TextWrapping="Wrap" Text="HH:MM" VerticalAlignment="Top" Width="172"/>

    </Grid>
</Window>
