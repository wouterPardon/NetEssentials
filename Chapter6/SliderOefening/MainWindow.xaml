<Window x:Class="SliderOefening.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SliderOefening"
        mc:Ignorable="d"
        Background="Gray"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="valueTextBox" HorizontalAlignment="Left" Height="23" Margin="164,49,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

        <Slider Name="valueSlider" Minimum="0" Maximum="100"  Value="10" TickFrequency="20" TickPlacement="Both"
                IsSnapToTickEnabled="True" LargeChange="40"
                HorizontalAlignment="Left" Margin="32,188,0,0" VerticalAlignment="Top" Width="398" MouseMove="valueSlider_MouseMove" ValueChanged="valueSlider_ValueChanged"/>
       
    </Grid>
</Window>
